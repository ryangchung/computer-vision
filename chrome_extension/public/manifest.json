{
    "manifest_version": 3,
    "name": "Unproductivity Blocker",
    "version": "1.0.0",
    "description": "Blocks all unproductive websites using computer vision and machine learning.",
    "action": {
      "default_popup": "index.html"
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "<all_urls>",
        "declarativeNetRequest",
        "declarativeNetRequestWithHostAccess",
        "activeTab"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "ruleset_1",
                "enabled": true,
                "path": "rules.json"
            }
        ]
    }
}